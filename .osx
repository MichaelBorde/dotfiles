################################################################################
# Boot2Docker
################################################################################
function boot2docker_start() {
  boot2docker start
  $(boot2docker shellinit)
}

################################################################################
# Finder
################################################################################
function show_all_files() {
  defaults write com.apple.finder AppleShowAllFiles TRUE
  killall Finder
}

function hide_secret_files() {
  defaults write com.apple.finder AppleShowAllFiles FALSE
  killall Finder
}

################################################################################
# Java
################################################################################
alias ls_java='/usr/libexec/java_home -V 2>&1 \
| grep -E "\d.\d.\d_\d\d" | cut -d , -f 1 | colrm 1 4 | grep -v Home'
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_05.jdk/Contents/Home
export GROOVY_HOME=/usr/local/opt/groovy/libexec
export GRADLE_HOME=/usr/local/Cellar/gradle/1.11
export MAVEN_OPTS="-Xmx1024m -Xms512m -Dfile.encoding=UTF8"
export ANT_OPTS="-Xmx1024m -Xms512m -Dfile.encoding=UTF8"

function change_java() {
  export JAVA_HOME="$(/usr/libexec/java_home -v "$1")"
  export PATH="${JAVA_HOME}/bin:${PATH}"
  java -version
}

################################################################################
# Misc
################################################################################
function brew_update() {
  brew update
  brew upgrade
  brew cleanup
  brew cask update
  brew cask cleanup
}

